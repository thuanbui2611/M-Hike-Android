<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="2dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white">
<RelativeLayout
    android:id="@+id/listHikes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageHike"
        android:layout_centerVertical="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image_hike"
        />
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_toStartOf="@id/moreBtn"
        android:layout_toLeftOf="@id/moreBtn"
        android:layout_toEndOf="@id/imageHike"
        android:layout_toRightOf="@id/imageHike">
        <TextView
            android:id="@+id/nameHike"
            android:text="Hike name"
            android:textSize="24sp"
            android:textColor="@color/darkGreen"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/locationHike"
            android:text="Location"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/dateHike"
            android:text="Date"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/levelHike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowColor="@color/black_80"
            android:shadowRadius="1"
            android:paddingHorizontal="6dp"
            android:paddingBottom="2dp"
            android:text="Easy"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
    <ImageButton
        android:id="@+id/moreBtn"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_black"
        android:background="@null"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
</androidx.cardview.widget.CardView>